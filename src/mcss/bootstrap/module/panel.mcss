@import "../../core/module/panel.mcss";

// Component:       `m-panel`
// ========================================================================

.m-panel {
    // margin-bottom: 20px;
    background: white;
    $border: #ddd;
    $border-radius: $border-radius-base;
    $box-shadow: 0 1px 1px rgba(0,0,0,.05);

    .panel_hd {
        padding: 10px 15px;
        background: #f5f5f5;
        color: $gray-dark;
        border-bottom: 1px solid #ddd;
        $border-radius: $border-radius-base - 1px, top;
    }

    .panel_bd {
        padding: 15px;
    }

    .panel_ft {
        padding: 10px 15px;
        background: #f5f5f5;
        border-top: 1px solid #ddd;
        $border-radius: $border-radius-base - 1px, bottom;
    }

    .panel_img {
        
    }
}

$m-panel-extend_color(primary, $brand-primary, #fff, $brand-primary);
$m-panel-extend_color(info, $status-info_background, $status-info_color, $status-info_border);
$m-panel-extend_color(success, $status-success_background, $status-success_color, $status-success_border);
$m-panel-extend_color(warning, $status-warning_background, $status-warning_color, $status-warning_border);
$m-panel-extend_color(error, $status-error_background, $status-error_color, $status-error_border);

