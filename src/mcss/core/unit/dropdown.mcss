// Component:       `u-dropdown`
// ========================================================================

.u-dropdown {
    display: inline-block;
    position: relative;
    
    .dropdown_bd {
        display: none;
        position: absolute;
        z-index: 1;
        width: 100%;
        top: 100%;

        .m-listview {
            > li > a {
                display: block;
            }
        }
    }
}

.u-dropdown.z-dis {
    .dropdown_hd > .u-btn {
        @extend .u-btn.z-dis;
    }
}