$g_gap = 20px;
$g_num = 12;

.g-row {
    $clearfix();
    margin-right: -$g_gap;
}

.g-row + .g-row {
    margin-top: $g_gap;
}

.g-col {
    $box-sizing: border-box;
    float: left;
    min-height: 1px;
    padding-right: $g_gap;
}

@for $index of 1...$g_num {
    .g-col-#{$index} {
        width: 100% * $index / $g_num;
    }

    .g-offset-#{$index} {
        $box-sizing: border-box;
        margin-left: 100% * $index / $g_num;
    }
}